@model Map
@section TopMenu {
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Project" asp-action="Dashboard">Profile</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Project" asp-action="Index">Project List</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Map" asp-action="Index">Map List</a>
        </li>
    </ul>
}
<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Delete Map</h2>
    </div>

    <form method="post" asp-action="DeleteMap">
        <input asp-for="MapId" hidden />
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="EmpId">Employee Id</label>
                <input type="text" class="form-control mb-3" asp-for="EmpId" placeholder="Enter Employee Id" disabled>
                <span asp-validation-for="EmpId" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ProjectId">Project Id</label>
                <input type="text" class="form-control mb-3" asp-for="ProjectId" placeholder="Enter Project Id" disabled>
                <span asp-validation-for="ProjectId" class=" alert-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-lg btn-danger p-2"><i class="bi bi-trash-fill"></i>Delete</button>
        <a asp-controller="Map" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>
